						<div class="col-md-6">
							<label class="form-label" for="towncity">Town / City</label>
							<input type="text" value="<%= element.town %>" name="town" class="form-control" required>
						</div>


						<div class="col-md-6">
							<label class="form-label" for="streetaddress">Street Address</label>
							<input type="text" value="<%= element.address %>" name="street" class="form-control"
								required>
						</div>

						<div class="col-md-6">
							<label class="form-label" for="postcodezip">Postcode / ZIP</label>
							<input type="text" value="<%= element.postcode %>" name="postcode" class="form-control"
								required>
						</div>

						<div class="col-md-6">
							<label class="form-label" for="phone">Phone</label>
							<input type="text" value="<%= element.phone %>" name="phone" class="form-control" required>
						</div>


						<input type="hidden" value="<%=element._id%>" id="id" name="id" />

						<div class="col-12 text-end">
							<button type="submit"
								class="flex-c-m stext-101 cl0 size-104 bg3  hov-btn3 p-lr-15 trans-04 pointer">
