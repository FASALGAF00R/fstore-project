	<!--================Order Details Area =================-->
	<br>
	<br>

	<section class="order_details section_gap">
		<div class="container" id="order">

			<div class="row order_d_inner">
				<div class="col-lg-4">
					<br>
					<br>
					<div class="details_item">
						<h4>Order Info</h4>
						<ul class="list">
							<li><span>Order number</span> :<%=user._id %>
							</li>
							<li><span>Date</span>
								<%=user.Date %>
							</li>
							<li><span>Total</span>:<%=user.totalAmount %>
							</li>
							<li><span>Payment method </span> :<%=user.paymentMethod %>
							</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-4">

				</div>
			</div>
			<br>
			<br>
			<div class="order_details_table">
				<h2>Order Details</h2>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Product</th>
								<th scope="col">Quantity</th>
								<th scope="col">Total</th>
							</tr>
						</thead>
						<tbody>
							<% user.product.forEach((product)=> { %>
								<tr>
									<td>
										<p>
											<%= product.productID.productname %>
										</p>
									</td>
									<td>
										<h5>x <%= product.quantity %>
										</h5>
									</td>
									<td>
										<p>Rs:<%=product.productID.price%>
										</p>
									</td>
								</tr>
								<% }) %>
									<tr>
										<td>
											<h4>after discount</h4>
										</td>
										<td>
											<h5></h5>
										</td>
										<td>
											<p>Rs:<%= user.totalAmount %>
											</p>
										</td>
									</tr>
									<tr>
										<td>
											<h4>Shipping</h4>
										</td>
										<td>
											<h5></h5>
										</td>
										<td>
											<p>Free</p>
										</td>
									</tr>
									<tr>
										<td>
											<h4>Total</h4>
										</td>
										<td>
											<h5></h5>
										</td>
										<td>
											<p>Rs:<%= user.totalAmount %>
											</p>
										</td>
									</tr>
						</tbody>
					</table>
					<br>
					<h3 class="title_confirmation">Thank you. Your order has been received.</h3>
					<br>

				</div>
			</div>



		</div>
		<div class="">
			<button type="button" onclick="downloadPDF()" class="btn btn-success m-2">download invoice</button>
		</div>
	</section>
	<!--================End Order Details Area =================-->



	<script>
		function downloadPDF() {
			var details = document.getElementById("order");
			var newWin = window.open('', 'Print-Window');
			newWin.document.open();
			newWin.document.write('<html><head><style>@media print { @page { size: A4; margin: 0; } }</style></head><body onload="window.print()">' + details.outerHTML + '</html>'); newWin.document.close();
			setTimeout(function () { newWin.close(); }, 10);
		}
	</script>
