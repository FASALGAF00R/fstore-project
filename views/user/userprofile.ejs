	<body>


		<!-- Profile Section -->
		<div class="container-xl px-4 mt-5">
			<hr class="mt-0 mb-4">
			<div class="row">
				<div class="col-xl-4">
					<div class="card mb-4 mb-xl-0">
						<div class="card-header" style="background-color: rgb(31, 29, 29);color:white;">Profile Picture</div>
						<div class="card-body text-center">
							<img class="img-account-profile rounded-circle mb-2"
								src="https://picsum.photos/200/200?grayscale&random=1" alt="Profile Image">
							<div class="small font-italic text-muted mb-4"></div>
						</div>
					</div>
				</div>
				<div class="col-xl-8">
					<div class="card mb-4">
						<div class="card-header" style="background-color:  rgb(31, 29, 29);color:white;">user details</div>
						<div class="card-body">
							<h5 class="text-start wallet mb-3">wallet: rs <%= data.wallet %>
							</h5>
							<form action="/verifyuserprofile" method="post" class="d-flex">
								<div class="col-7">
									<div class="card mb-4">
										<div class="card-body">
											<div class="row">
												<div class="col-sm-3">
													<p class="mb-0">Full Name</p>
												</div>
												<div class="col-sm-9">
													<input type="text" name="name" class="input"
														value="<%= data.name %>" required>
													<input type="hidden" name="id" value="<%= data._id %>">
												</div>
											</div>
											<hr>
											<div class="row">
												<div class="col-sm-3">
													<p class="mb-0">Email</p>
												</div>
												<div class="col-sm-9">
													<input type="email" name="email" class="input"
														value="<%= data.email %>" required>
												</div>
											</div>
											<hr>
											<div class="row">
												<div class="col-sm-3">
													<p class="mb-0">Mobile</p>
												</div>
												<div class="col-sm-9">
													<input type="number" name="number" class="input"
														value="<%= data.number %>" required>
												</div>
											</div>
											<hr>
											<div class="row">
												<div class="col-sm-3">

													<button type="submit" class="btn btn-dark">Update Profile</button>

												</div>
											</div>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
