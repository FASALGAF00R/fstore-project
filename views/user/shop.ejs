	<script>
		const addwish = function (id) {
			$.ajax({
				url: "/addwishlist",
				method: 'get',
				data: {
					id: id
				},
				success: function (response) {
					if (response.status) {
						swal(
							'Added to Wishlist!',
							'The product has been added to your wishlist.',
							'success'
						);
						console.log("producted added to wish list");

					} else {
						swal("Login Required", "Please login to your account", "error");

					}
				},
				error: function (xhr, status, error) {
					console.error(error);
					swal("Error!", "Unable to add to cart. Try again later.", "error");

				}
			});
		}

	</script>
